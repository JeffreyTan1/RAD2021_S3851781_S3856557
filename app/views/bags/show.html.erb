<p id="notice"><%= notice %></p>

<%if !@items.nil?%>
        <h1><%=@collection%></h1>
        <% @items.each do |item| %>
            <div class = "card">
                <p><%=item.name%> <br>
                <small>$<%=item.price%> <br> <%=item.description%></small></p>
                <%= image_tag(item.image, width: 200) %>
                <%= link_to 'Remove from bag', remv_from_bag_path(:id => item.id), method: :post %>
            </div>
        <%end%>
        
        <form action=<%= checkout_bag_path(:id => current_user.id) %> method = "post">
            <input type="submit" value="Checkout" />
        </form>
<%end%>

<h2><bold>Price: $<%= @price %></bold></h2>



