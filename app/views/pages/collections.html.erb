                    <%= label_tag(:black, "Black") %>
                    <%= check_box_tag(:yellow) %>
                    <%= label_tag(:yellow, "Yellow") %>
                    <%= check_box_tag(:green) %>
                    <%= label_tag(:green, "Green") %>
                    <%= check_box_tag(:grey) %>
                    <%= label_tag(:grey, "Grey") %>
                    <%= check_box_tag(:white) %>
                    <%= label_tag(:white, "White") %>
                    <%= check_box_tag(:pink) %>
                    <%= label_tag(:pink, "Pink") %>
                    <%= check_box_tag(:denim) %>
