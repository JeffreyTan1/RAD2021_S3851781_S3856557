<h3>Search Result</h3>  

    <% @results.each do |result| %>  
        <div class = "card">
                <%= link_to result.name, show_item_path(:id => result.id), method: :get %>
                <small>$<%=result.price%> <br> <%=result.description%></small>
                
                <div class = "image-button-container">
                    <%= link_to(image_tag(result.image, width: 200), show_item_path(:id => result.id)) %>
                    <div class = "float-btn">
                        <%= button_to toggle_item_saved_list_path(:id => result.id), method: :post do %>
                            <%if logged_in? %>
                                <%if @savedListItems.include? result %>
                                    <%= image_tag("/assets/filledheart.jpg", class: "float-img")%>
                                <%else%>
                                    <%= image_tag("/assets/emptyheart.jpg", class: "float-img")%>
                                <%end%>
                            <%else%>
                                <%= image_tag("/assets/emptyheart.jpg", class: "float-img")%>
                            <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
    <% end %>